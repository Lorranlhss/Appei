<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <!-- Cabeçalho fixo no topo -->
    <TextView
        android:id="@+id/cabecalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="conheça a amazonia"
        android:textAlignment="center"
        android:textColor="@color/backgroundColor"
        android:textSize="24sp" />

    <!-- Conteúdo rolável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título dentro do conteúdo rolável -->
            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingBottom="16dp"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Conteúdo das seções de texto e imagens -->
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:src="@drawable/img1_conhe_amaz"
                android:contentDescription="Imagem da Amazônia"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/paragr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@color/primaryTextColor"
                android:justificationMode="inter_word"
                android:paddingBottom="16dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:src="@drawable/img1_conhe_amaz"
                android:contentDescription="Imagem da Amazônia"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/paragr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@color/primaryTextColor"
                android:justificationMode="inter_word"
                android:paddingBottom="16dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:src="@drawable/img1_conhe_amaz"
                android:contentDescription="Imagem da Amazônia"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/paragr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@color/primaryTextColor"
                android:justificationMode="inter_word"
                android:paddingBottom="16dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:src="@drawable/img1_conhe_amaz"
                android:contentDescription="Imagem da Amazônia"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/paragr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textColor="@color/primaryTextColor"
                android:justificationMode="inter_word"
                android:paddingBottom="16dp"
                android:textSize="18sp" />

            <!-- Repita para outras seções de imagem e parágrafo -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
